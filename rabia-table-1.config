# Inherit the base config
. ./config.template

# 3 servers, 1 client
CONFIG_CONTAINER_COUNT=4
# 4 cores per container
CONFIG_CONTAINER_CPUS=4
# 'wget' and 'tar' are used by install.sh but not installed
# 'pkg-config' is used by redis' Makefile
# 'psmisc' for 'killall' in the paxos kill scripts
CONFIG_CONTAINER_PACKAGES='sudo git wget tar pkg-config psmisc'
# 'bash' necessary for the shell due to bashisms in Rabia's scripts
# '-l' necessary so bash runs .profile
CONFIG_CONTAINER_SHELL='bash -l'
# Custom prefix for convenience
CONFIG_CONTAINER_PREFIX='rabia'
# Ubuntu 18.04
CONFIG_OS_IMAGE='ubuntu:18.04'
